
// Basic while loop
while true {
  print("looping");
}

// While with condition that ends
let i = 0;
while i < 5 {
  print(i);
  i = i + 1;
}

// While with complex condition
while (x > 0 and y < 10) or flag {
  x = x - 1;
}

// While with break
let count = 0;
while true {
  if count >= 3 {
    //break;
  }
  print(count);
  count = count + 1;
}

// While with continue
let num = 0;
while num < 5 {
  num = num + 1;
  if num == 3 {
    //continue;
  }
  print(num);
}

// While inside another while (nested)
let outer = 0;
while outer < 2 {
  let inner = 0;
  while inner < 3 {
    print(inner);
    inner = inner + 1;
  }
  outer = outer + 1;
}

// While with block variable shadowing
let value = 10;
while value > 0 {
  let value = "shadowed";
  print(value);
 // break;
}

// While with if-else inside
let index = 0;
while index < 3 {
  if index == 1 {
    print("middle");
  } else {
    print("not middle");
  }
  index = index + 1;
}

// While with assignment in condition
let flag = false;
while (flag = check_condition()) {
  print("Condition true");
}

// While with function call and object access
while get_object().is_ready() {
  print("Ready to go!");
}

// While with array index
let arr = [1, 2, 3, 4];
let j = 0;
while j < arr.length {
  print(arr[j]);
  j = j + 1;
}

// Empty while body (should still parse)
while false { }

// While with ternary expression inside
let n = 5;
while n > 0 {
  let msg = n > 3 ? "high" : "low";
  print(msg);
  n = n - 1;
}

