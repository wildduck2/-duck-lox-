
// Basic for loop
for i in 0..5 {
  print(i);
}

// For loop with array iteration
let arr = [1, 2, 3, 4];
for x in arr {
  print(x);
}

// For loop with function call
for item in get_items() {
  process(item);
}

// For loop with tuple destructuring
for (x, y) in points {
  print(x + y);
}

// For loop with condition inside
for n in 0..10 {
  if n % 2 == 0 {
    print("even");
  } else {
    print("odd");
  }
}

// For loop with block and declarations
for num in 0..3 {
  let doubled = num * 2;
  print(doubled);
}

// For loop with continue
for i in 0..10 {
  if i == 5 {
    //continue;
  }
  print(i);
}

// For loop with break
for i in 0..10 {
  if i == 7 {
    //break;
  }
  print(i);
}

// Nested for loops
for i in 0..3 {
  for j in 0..2 {
    print(i * j);
  }
}

// For loop with array literal
for element in [10, 20, 30] {
  print(element);
}

// For loop over object field
for key in obj.keys {
  print(key);
}

// For loop with call chain
